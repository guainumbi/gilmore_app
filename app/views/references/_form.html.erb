<%= form_with(model: reference, local: true) do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :reference_name %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.text_field :category, id: :reference_category %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
